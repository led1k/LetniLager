<Page x:Class="LetniLager.PageMain.PageAddGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LetniLager.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="760" d:DesignWidth="1000"
      Title="PageAddGroup">

    <Grid>
        <StackPanel Grid.Column="1" Orientation="Vertical" 
                    Margin="5" Width="500">

        <TextBlock Text="Введите группу:" FontSize="36"
                    Width="400" Margin="50"/>

        <TextBox Name="TxbGroup" FontSize="36"
                   Width="400" Height="50" Margin="50"/>

        <TextBlock Text="Введите специальность:" FontSize="36"
                     Width="400" Margin="50"/>

        <ComboBox Name="CmbSpecial" FontSize="34"           
                    Width="400" Height="50" Margin="5" 
                  SelectionChanged="CmbSpecial_SelectionChanged"/>


            <Button x:Name="Add" Content="Добавить" FontSize="34"
                  Width="400" Height="60" Margin="50" 
                  Click="Add_Click"/>
            
        </StackPanel>
    </Grid>
</Page>
